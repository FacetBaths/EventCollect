# EventCollect Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eventcollect
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/eventcollect

# LEAP CRM Configuration
LEAP_API_URL=https://your-leap-instance.leapcrm.com/api
LEAP_API_TOKEN=Bearer your_leap_api_token_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:9000,http://localhost:3000
ENABLE_CORS_CREDENTIALS=true

# Body Parser Limits
BODY_LIMIT=10mb
URL_LIMIT=10mb

# Logging
ENABLE_MORGAN_LOGGING=true
LOG_LEVEL=info

# Email Configuration (if using email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# Webhook Configuration (if using webhooks)
WEBHOOK_SECRET=your_webhook_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Monitoring (if using application monitoring)
MONITORING_API_KEY=your_monitoring_api_key

# Feature Flags
ENABLE_APPOINTMENT_SYNC=true
ENABLE_LEAP_INTEGRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Development/Testing
MOCK_LEAP_API=false
SKIP_EMAIL_SENDING=true
